{
  "name": "yuansheng-static-site",
  "version": "1.0.0",
  "description": "静态网站项目 - 原生的HTML/CSS/JS实现",
  "main": "src/index.html",
  "scripts": {
    "dev": "npx serve src -p 3000",
    "build": "npm run build:css",
    "build:css": "sass assets/css/style-login.scss assets/css/style-login.css --style compressed",
    "watch:css": "sass --watch assets/css/style-login.scss:assets/css/style-login.css",
    "serve": "npx serve src -p 8080",
    "deploy": "wrangler pages deploy src"
  },
  "keywords": [
    "static-site",
    "html",
    "css",
    "javascript",
    "cloudflare-pages"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.69.5",
    "serve": "^14.2.1",
    "wrangler": "^3.19.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}